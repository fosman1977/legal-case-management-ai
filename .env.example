# Legal Document System Environment Variables

# API Keys and External Services
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# AI Model Configuration
VITE_AI_MODEL=claude-3-5-sonnet-20241022

# PDF-Extract-Kit Configuration (Local Installation)
PDF_EXTRACT_KIT_URL=http://localhost:8001
PDF_EXTRACT_PYTHON_PATH=/path/to/pdf-extract-kit-env/bin/python
PDF_EXTRACT_SCRIPT_PATH=/path/to/PDF-Extract-Kit
PDF_EXTRACT_MODELS_PATH=/home/user/.cache/huggingface

# PDF Processing Settings
PDF_EXTRACT_TIMEOUT=60000
PDF_EXTRACT_MAX_FILE_SIZE=50000000
PDF_EXTRACT_RETRY_ATTEMPTS=3

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Settings (if using external DB)
DATABASE_URL=your_database_url_here

# File Storage Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Legal System Settings
DEFAULT_CASE_FOLDER=./cases
BACKUP_INTERVAL=3600000
AUTO_SAVE_INTERVAL=30000

# OCR Settings
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=80

# Entity Extraction Settings
EXTRACTION_CONFIDENCE_THRESHOLD=0.75
MAX_ENGINES_PARALLEL=3
ENTITY_CACHE_TTL=86400

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true